<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="CollApp.AddCourse">
    <ContentPage.Content>
        <StackLayout Margin="20,20,20,0">
            <Entry Placeholder="Course Name" 
                   x:Name="tbCourseName"/>
            <Picker Title="Course Status" 
                    x:Name="StatusPicker"/>
            <Label Text="Course Start" />
            <DatePicker x:Name="CStartDatePicker"
                        DateSelected="CStartDatePicker_DateSelected"/>
            <Label Text="Course End" />
            <DatePicker x:Name="CEndDatePicker"
                        DateSelected="CEndDatePicker_DateSelected"/>
            <Editor Placeholder="Notes"
                    x:Name="tbNotes" Keyboard="Plain"/>
            <BoxView />
            <Picker Title="Course Instructor" 
                    x:Name="tbInst"/>
            <Picker Title="Instructor Phone" 
                    x:Name="tbInstPhone"/>
            <Picker Title="Instructor Email"
                    x:Name="tbInstEmail"/>
            <Button Text="SAVE"
                    Clicked="CSaveButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>