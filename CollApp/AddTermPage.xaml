<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="CollApp.AddTermPage">
    <ContentPage.Content>
        <StackLayout Margin="20,20,20,0">
            <Entry Placeholder="Term Name" 
                   x:Name="tbTermName"/>
            <DatePicker x:Name="TStartDatePicker"
                        DateSelected="TStartDatePicker_DateSelected"/>
            <DatePicker x:Name="TEndDatePicker"
                        DateSelected="TEndDatePicker_DateSelected"/>
            <Button Text="SAVE"
                    Clicked="SaveButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>